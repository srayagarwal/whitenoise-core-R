set -x
set -e

which cmake

rm -rf _builds

cmake -H. -B_builds \
    -DCMAKE_VERBOSE_MAKEFILE=ON \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=_install \
    -DCMAKE_SHARED_LIBRARY_PREFIX_CXX=""

cmake --build _builds --target install --config Release

# Linux
cp _install/lib/dp_R_shim.so src/ || echo "Failed: dp_R_shim.so -> src"

# Mac
cp _install/lib/dp_R_shim.dylib src/dp_R_shim.so || echo "Failed: dp_R_shim.dylib -> src"